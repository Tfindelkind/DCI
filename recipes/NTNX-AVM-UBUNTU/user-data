#cloud-config
output: {all: '| tee -a /var/log/cloud-init-output.log'}
package_upgrade: true
user: nutanix
password: nutanix/4u
chpasswd: { expire: False}
ssh_pwauth: True
bootcmd: 
- echo "nameserver 192.168.178.1" | sudo tee -a /etc/resolvconf/resolv.conf.d/head 
- sudo resolvconf -u 
runcmd:
- sudo apt-get update
- sudo curl -O https://storage.googleapis.com/golang/go1.6.linux-amd64.tar.gz
- sudo tar -xvf go1.6.linux-amd64.tar.gz
- sudo mv go /usr/local
- sudo echo "export PATH=$PATH:/usr/local/go/bin" >> /home/ubuntu/.profile
- sudo apt-get install -y git
- sudo curl https://github.com/vmware/govmomi/releases/download/v0.8.0/govc_linux_amd64.gz | gzip -d > /usr/local/bin/govc
- sudo chmod +x /usr/local/bin/govc
final_message: "The NTNX-AVM is finally up, after $UPTIME seconds"

